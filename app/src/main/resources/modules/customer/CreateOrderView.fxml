<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.control.ScrollPane?>


<!-- Controlador: customOrders.Orders.CreateOrderController -->
<AnchorPane prefHeight="750.0" prefWidth="1200.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="customOrders.Orders.CreateOrderController">
    <children>
        <!-- Título Principal -->
        <Label layoutX="20.0" layoutY="15.0" style="-fx-text-fill: #3f51b5;" text="Creación de Pedido (Carrito)">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <SplitPane dividerPositions="0.60" layoutX="20.0" layoutY="60.0" prefHeight="650.0" prefWidth="1160.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="60.0">
            <!-- Lado Izquierdo (MÁS GRANDE): Galería de Productos -->
            <items>
                <VBox spacing="10.0" style="-fx-background-color: white;">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Label style="-fx-text-fill: #333333;" text="1. Galería de Productos Disponibles">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>

                        <!-- NUEVA VISTA: SCROLLPANE CON TILEPANE PARA GALERÍA DE TARJETAS -->
                        <ScrollPane fx:id="productScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-color: white;">
                            <content>
                                <!-- TilePane contendrá dinámicamente las tarjetas de producto -->
                                <TilePane fx:id="productTilePane" hgap="15.0" vgap="15.0" alignment="TOP_LEFT">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </TilePane>
                            </content>
                        </ScrollPane>

                        <!-- Controles de Añadir a Carrito (Mantenidos ocultos como buena práctica, su lógica está en el controlador de la tarjeta) -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0" managed="false" visible="false">
                            <children>
                                <Label text="Cantidad a Añadir:" style="-fx-font-weight: bold;" />
                                <TextField fx:id="quantityField" prefWidth="80.0" promptText="Ej: 1" />
                                <!-- handleAddToCart se mantiene en el controlador principal -->
                                <Button mnemonicParsing="false" onAction="#handleAddToCart" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="Añadir al Carrito" />
                            </children>
                        </HBox>
                        <!-- Etiqueta de mensaje (Mantenida por si el controlador la usa de forma global) -->
                        <Label fx:id="productMessageLabel" minHeight="20.0" style="-fx-text-fill: #ff9800; -fx-font-weight: bold;" managed="false" visible="false" />
                    </children>
                </VBox>

                <!-- Lado Derecho (MÁS PEQUEÑO): Carrito de Compras, Totales y Acciones -->
                <VBox spacing="10.0" style="-fx-background-color: white;">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Label style="-fx-text-fill: #333333;" text="2. Carrito de Compras">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <TableView fx:id="cartTable" VBox.vgrow="ALWAYS" style="-fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                            <columns>
                                <TableColumn fx:id="cartNameCol" prefWidth="250.0" text="Producto" />
                                <TableColumn fx:id="cartPriceCol" prefWidth="100.0" text="Precio Unit." />
                                <TableColumn fx:id="cartQuantityCol" prefWidth="80.0" text="Cantidad" />
                                <TableColumn fx:id="cartTotalCol" prefWidth="120.0" text="Subtotal" />
                                <!-- Columna de Botón de Eliminar -->
                                <TableColumn fx:id="cartRemoveCol" prefWidth="60.0" resizable="false" text="Eliminar" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>

                        <!-- Totales de la Orden -->
                        <VBox alignment="CENTER_RIGHT" spacing="5.0" style="-fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                            <children>
                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <Label text="Total Items:" style="-fx-font-weight: normal;" />
                                    <Label fx:id="totalItemsLabel" text="0" style="-fx-font-weight: bold;" prefWidth="100.0" alignment="CENTER_RIGHT" />
                                </HBox>
                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <Label text="TOTAL A PAGAR:" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                                    <Label fx:id="grandTotalLabel" text="0.00 €" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #3f51b5;" prefWidth="100.0" alignment="CENTER_RIGHT" />
                                </HBox>
                            </children>
                        </VBox>

                    </children>
                </VBox>

            </items>
        </SplitPane>

        <!-- Pie de Página (Mensajes y Botón de Ordenar) -->
        <HBox alignment="CENTER_RIGHT" layoutX="20.0" layoutY="670.0" prefHeight="60.0" prefWidth="1160.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <children>
                <Label fx:id="orderMessageLabel" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" style="-fx-text-fill: #3f51b5; -fx-font-weight: bold;" />
                <Button fx:id="placeOrderButton" disable="true" mnemonicParsing="false" onAction="#handlePlaceOrder" prefHeight="45.0" prefWidth="250.0" style="-fx-background-color: #3f51b5; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 18px; -fx-cursor: hand;" text="3. Confirmar y Realizar Pedido" />
            </children>
        </HBox>
    </children>
</AnchorPane>