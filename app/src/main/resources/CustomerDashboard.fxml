<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Priority?>

<!--
  Este es el Dashboard del Cliente.
  Controlador: com.customOrders.CustomerDashboardController
-->
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="customOrders.CustomerDashboardController">
    <top>
        <!-- Encabezado (Cambiamos el color para diferenciarlo del Admin) -->
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Panel de Cliente - Sistema de Órdenes" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <padding>
                <Insets bottom="15.0" top="15.0" />
            </padding>
        </Label>
    </top>
    <left>
        <!-- Menú Lateral -->
        <VBox prefWidth="250.0" style="-fx-background-color: #263238;" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="menuTitleLabel" text="MENÚ CLIENTE" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" top="20.0" />
                    </VBox.margin>
                </Label>

                <!-- Botón 1: Crear Orden -->
                <Button fx:id="btnCrearOrden" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleNavigation" style="-fx-background-color: transparent;" text="Crear Nueva Orden" textFill="WHITE">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                    </padding>
                </Button>

                <!-- Botón 2: Ver Órdenes -->
                <Button fx:id="btnVerOrdenes" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleNavigation" style="-fx-background-color: transparent;" text="Ver Mis Órdenes" textFill="WHITE">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                    </padding>
                </Button>

                <!-- Separador flexible para empujar el botón de Logout hacia abajo -->
                <Label VBox.vgrow="ALWAYS" />

                <!-- Botón de Cerrar Sesión (Logout) -->
                <Button fx:id="btnLogout" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: transparent; -fx-text-fill: #ff8a80;" text="Cerrar Sesión" textFill="#ff4081">
                    <VBox.margin>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                    </padding>
                </Button>

            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </padding>
        </VBox>
    </left>
    <center>
        <!-- Área de Contenido Principal -->
        <StackPane fx:id="contentArea" BorderPane.alignment="CENTER" style="-fx-background-color: #f4f4f4;">
            <children>
                <Label fx:id="welcomeLabel" text="Bienvenido. Seleccione una opción del menú." wrapText="true">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Label>
            </children>
        </StackPane>
    </center>
</BorderPane>