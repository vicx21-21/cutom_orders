<!-- Controlador: com.customOrders.ProductTypesTypes.ProductTypesController (Ruta actualizada) -->
<AnchorPane prefHeight="700.0" prefWidth="950.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.com.customOrders.ProductTypes.ProductsTypesController">
    <children>
        <SplitPane dividerPositions="0.6" layoutX="190.0" layoutY="148.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <!-- Lado Izquierdo: Lista de Tipos de Producto (Tabla) -->
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <Label style="-fx-text-fill: #3f51b5;" text="Tipos de Producto Registrados">
                                    <font>
                                        <Font name="System Bold" size="20.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" top="10.0" />
                                    </VBox.margin>
                                </Label>
                                <TableView fx:id="productTypeTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="codeColumn" prefWidth="100.0" text="Código" />
                                        <TableColumn fx:id="nameColumn" prefWidth="250.0" text="Nombre del Tipo" />
                                        <TableColumn fx:id="parentCodeColumn" prefWidth="180.0" text="Código Padre" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                                <Label fx:id="messageLabel" minHeight="20.0" style="-fx-text-fill: #555555;">
                                    <VBox.margin>
                                        <Insets bottom="5.0" left="10.0" top="5.0" />
                                    </VBox.margin>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
                <!-- Lado Derecho: Formulario de Edición/Creación -->
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <VBox layoutX="14.0" layoutY="14.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <Label style="-fx-text-fill: #3f51b5;" text="Detalles y Edición">
                                    <font>
                                        <Font name="System Bold" size="20.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets bottom="15.0" left="10.0" top="10.0" />
                                    </VBox.margin>
                                </Label>
                                <GridPane hgap="10.0" vgap="15.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Código (PK):" />
                                        <Label text="Nombre:" GridPane.rowIndex="1" />
                                        <Label text="Tipo Padre (FK):" GridPane.rowIndex="2" />
                                        <TextField fx:id="codeField" promptText="Ej: ELECT, VEST" GridPane.columnIndex="1" />
                                        <TextField fx:id="nameField" promptText="Nombre descriptivo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <ComboBox fx:id="parentTypeComboBox" maxWidth="1.7976931348623157E308" promptText="Seleccione un tipo de padre" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    </children>
                                    <VBox.margin>
                                        <Insets left="10.0" right="10.0" />
                                    </VBox.margin>
                                </GridPane>


                                <!-- Botones de Acción -->
                                <HBox alignment="CENTER" spacing="15.0">
                                    <VBox.margin>
                                        <Insets top="30.0" />
                                    </VBox.margin>
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#handleNew" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #607d8b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Nuevo" />
                                        <Button mnemonicParsing="false" onAction="#handleSave" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Guardar" />
                                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDelete" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Eliminar" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>


